{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"angular2-carbonldp/*": [ "../angular2-carbonldp/dist/*" ],
			"carbonldp-panel/*": [ "src/*" ],
			"carbonldp/*": [ "../CarbonLDP-JS-SDK/dist/*" ]
		},
		"lib": [
			"dom",
			"es2015",
			"scripthost"
		]
	},
	"exclude": [
		"dist",
		"carbonldp-js-sdk/*",
		"angular2-carbonldp/*",
		"node_modules/*",
		"node_modules/typescript",
		"typings/custom",
		"typings/globals",
		"typings/index.d.ts"
	]
}
